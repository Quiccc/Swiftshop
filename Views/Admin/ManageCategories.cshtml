@model List<Swiftshop.Models.Category>;

<div style="margin-top:5%; margin-bottom:2%; color:white;">
    <h1>Create new category</h1>
    <h5>Categories contain subcategories to enhance product searching.</h5>

    <form asp-controller="Category" asp-action="CreateCategory" style="margin-top:2%">
        <input required type="text" name="NewName" />
        <input type="submit" class="btn btn-md btn-light" value="Create" />
    </form>
</div>
@{
    if (Model.Count != 0)
    {
        <table class="table align-middle table-striped-columns" style="color:white; margin-bottom:10%">
            <thead>
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Id</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @{
                    foreach (var category in Model)
                    {
                        <tr>
                            <th scope="row">@Model.IndexOf(category)</th>
                            <td>@Html.DisplayFor(modelItem => category.Id)</td>
                            <td>@Html.DisplayFor(modelItem => category.Name)</td>
                            <td>
                                <div class="d-flex justify-content-start">
                                    <form asp-controller="Category" asp-action="UpdateCategoryName" asp-route-CategoryId="@category.Id">
                                        <div asp-asp-validation-summary="ModelOnly">
                                            <input required type="text" name="NewName" />
                                            <input type="submit" class="btn btn-md btn-light" value="Save" />
                                        </div>
                                    </form>
                                    <a class="btn btn-md btn-light" asp-controller="Category" asp-action="DeleteCategory" asp-route-CategoryId="@category.Id" style="margin-left:.5%;"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No Categories.</h1>
    }
}
