@model List<Swiftshop.Models.ShoppingList>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid" style="width:80%;">
    <div class="d-flex flex-column">
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link active" asp-controller="ShoppingList" asp-action="ActiveLists" asp-route-Page="1">Active Lists</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" aria-disabled="true">Completed Lists</a>
            </li>
        </ul>
        <div class="d-inline-flex mt-3 mb-5 ms-3">
            <div><h2 style="color:white;">Completed Shopping Lists</h2></div>
        </div>
        @{
            if (Model.Count != 0)
            {
                @*Shopping List Card*@
                <div>
                    <div class="d-flex justify-content-center">
                        <div class="d-flex">
                            @foreach (var item in Model)
                            {
                                <div class="card ms-5" style="width:20rem">
                                    <div class="mb-5 mt-5"><img src="~/product_placeholder.png" class="card-img-top mx-auto" style="width:100%"></div>
                                    <div class="card-body" style="background-color:#212121">
                                        <div class="d-flex flex-column">
                                            <h5 class="card-title" style="color:white">@Html.DisplayFor(modelItem => item.Name)</h5>
                                            <div class="d-flex">
                                                <a asp-controller="ShoppingListContent" asp-action="CompletedListSummary" asp-route-ListId="@item.Id" class="btn btn-light btn-lg"><i class="bi bi-list-ul"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                @*Shopping List Paginator*@
                <div>
                    <nav class="home-page-paginator">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @{
                                for (int i = 1; i <= ViewBag.PaginatorSize; i++)
                                {
                                    <li class="page-item"><a class="page-link" href=@Html.Raw("CompletedLists/?Page="+i)>@i</a></li>
                                }
                            }
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <h1 style="color:white">No Completed Lists.</h1>
            }
        }
    </div>
</div>


