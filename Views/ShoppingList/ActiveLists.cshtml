@model List<Swiftshop.Models.ShoppingList>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid" style="width:80%;">
    <div class="d-flex flex-column">
        <!--List Type Navigation Bar-->
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link disabled" aria-disabled="true">Active Lists</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-controller="ShoppingList" asp-action="CompletedLists" asp-route-Page="1">Completed Lists</a>
            </li>
        </ul>
        <div class="d-inline-flex mt-3 mb-5 ms-3">
            <div><h2 style="color:white;">Active Shopping Lists</h2></div>
            @*Create List Modal Button*@
            <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#CreateListModal" style="margin-left:1%">New</button>
            <div>
                @*Create List Modal*@
                <div class="modal fade" id="CreateListModal" tabindex="-1" aria-labelledby="CreateListModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content" style="background-color:#212121; color:white">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="CreateListModalLabel">Name Your Shopping List.</h1>
                                <button type="button" class="btn btn-dark" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
                            </div>
                            <div class="modal-body">
                                <form asp-controller="ShoppingList" asp-action="CreateShoppingList" style="margin-top:2%; width:100%">
                                    <div class="input-group mb-3">
                                        <input required type="text" name="NewName" class="form-control" placeholder="New Shopping List" aria-label="New Shopping List" aria-describedby="basic-addon2">
                                    </div>
                                    <button type="submit" class="btn btn-light">Create</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @{
            if (Model.Count > 0)
            {
                @*Landing Page Shopping List Card*@
                <div>
                    <div class="d-flex justify-content-center">
                        <div class="d-flex">
                            @foreach (var item in Model)
                            {
                                <div class="card ms-5" style="width:20rem">
                                    <div class="d-flex flex-column align-items-end">
                                        <div>
                                            @{
                                                if (item.IsFavorited == false)
                                                {
                                                    <a class="btn btn-light btn-lg" asp-controller="ShoppingList" asp-action="SwitchIsFavorited" asp-route-ListId="@item.Id" asp-route-OldStatus="@item.IsFavorited" asp-route-Page="@ViewBag.Page">
                                                        <i class="bi bi-heart"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-light btn-lg" asp-controller="ShoppingList" asp-action="SwitchIsFavorited" asp-route-ListId="@item.Id" asp-route-OldStatus="@item.IsFavorited" asp-route-Page="@ViewBag.Page">
                                                        <i class="bi bi-heart-fill"></i>
                                                    </a>
                                                }
                                            }
                                        </div>
                                        <div class="mb-5"><img src="~/product_placeholder.png" class="card-img-top mx-auto" style="width:100%"></div>
                                    </div>
                                    <div class="card-body" style="background-color:#212121">
                                        <div class="d-flex flex-column">
                                            <h5 class="card-title" style="color:white">@Html.DisplayFor(modelItem => item.Name)</h5>
                                            <div class="d-flex">
                                                <div class="flex-grow-1">
                                                    <a class="btn btn-light btn-lg" asp-controller="ShoppingListContent" asp-action="Index" asp-route-ListId="@item.Id" asp-route-SubcategoryId="0"><i class="bi bi-bag-plus-fill"></i></a>
                                                    <a class="btn btn-light btn-lg ms-2" asp-controller="ShoppingListContent" asp-action="ActiveListSummary" asp-route-ListId="@item.Id"><i class="bi bi-list-ul"></i></a>
                                                </div>
                                                <div><a class="btn btn-light btn-lg ms-2" asp-action="DeleteShoppingList" asp-route-ListId="@item.Id" asp-route-ReturnAction="ActiveLists"><i class="bi bi-trash3-fill"></i></a></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                @*Shopping List Paginator*@
                <div>
                    <nav class="home-page-paginator">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @{
                                for (int i = 1; i <= ViewBag.PaginatorSize; i++)
                                {
                                    <li class="page-item"><a class="page-link" href=@Html.Raw("/?Page="+i)>@i</a></li>
                                }
                            }
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <h1 style="color:white">No Active Lists</h1>
            }
        }
    </div>
</div>


