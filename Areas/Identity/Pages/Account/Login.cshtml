@page
@model LoginModel

<div class="d-flex justify-content-center">
        <form id="account" method="post" class="login-form">
            <img class="login-page-logo" src="/logo.png" />
            <h2 class="login-page-text">Log in to start shopping.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"><p class="login-page-text-inv">Email</p></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password" class="form-label"><p class="login-page-text-inv">Password</p></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label style="color:#efefef;" font-family:font-family:font-family:'Comic Sans MS" asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
            <button id="login-submit" type="submit" class="btn" style="background-color:#7a47b8; font-family: 'Comic Sans MS','Comic Sans',cursive; color:#efefef">Log in</button>
            </div>
            <div style="padding-top:5%">
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><p class="login-page-text">Create a new account.</p></a>
                </p>
            </div>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
